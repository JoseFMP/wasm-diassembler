{ 
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "lib": ["es2017"],
        "typeRoots": ["./lib/**"],
        "noEmit": false,
        "sourceMap": true,
        
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "noUnusedLocals": true,
            
        "types": ["node"],

    },
    "include": [
        "lib",
        "index.ts"
    ]
}