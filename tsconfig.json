{ 
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "lib": ["es2017"],
        "noEmit": true,
        "sourceMap": true,
        
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "noUnusedLocals": true,
            
        "types": ["node"],
    },
    "exclude": [
        "dist",
        "*.js",
        "node_modules",
    ]
}